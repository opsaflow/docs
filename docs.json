{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Rivestack",
  "colors": {
    "primary": "#2D3FE0",
    "light": "#4B5CE8",
    "dark": "#1A2BB0"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "getting-started",
              "connection-guide"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "pgvector",
              "high-availability",
              "backups",
              "monitoring",
              "scaling",
              "security",
              "regions"
            ]
          },
          {
            "group": "Resources",
            "pages": [
              "pricing",
              "limits",
              "terraform",
              "faq"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://app.rivestack.io",
          "icon": "gauge"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/rivestack",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@rivestack.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.rivestack.io"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "redirects": [
    {
      "source": "/api-reference/introduction",
      "destination": "/"
    },
    {
      "source": "/api-reference/:slug*",
      "destination": "/"
    }
  ],
  "footer": {
    "socials": {
      "github": "https://github.com/rivestack"
    }
  }
}
